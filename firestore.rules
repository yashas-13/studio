rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read the list of users for the login page
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Protect all other documents
    match /{document=**} {
      allow read, write: if request.auth != null; // Require authentication for everything else
    }
  }
}
